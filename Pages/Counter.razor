@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<hr>
<Graph title="Title"/>
<hr>
<Graph values="20,30,40,50" colors="#339090,#903378,#a3a322,#45a3b4,#fff000,#903378,#a3a322,#45a3b4" />
<hr>
<Graph values="200,300,400,500" colors="#339090,#903378,#a3a322,#45a3b4,#fff000,#903378,#a3a322,#45a3b4"/>
<hr>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}